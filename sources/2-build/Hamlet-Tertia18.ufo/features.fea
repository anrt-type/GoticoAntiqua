# Prefix: Languagesystems
# automatic
languagesystem DFLT dflt;

feature aalt {
# automatic
feature salt;
feature ss01;
feature ss02;
} aalt;

feature liga {
sub c h by c_h;
sub c k by c_k;
sub f i by f_i;
sub f f by f_f;
sub f l by f_l;
sub f f l by f_f_l;
sub t h by t_h;
sub t z by t_z;
} liga;

feature salt {
sub germandbls by germandbls.ss01;
sub z by z.ss01;
} salt;

feature ss01 {
sub germandbls by germandbls.ss01;
} ss01;

feature ss02 {
sub z by z.ss01;
} ss02;

